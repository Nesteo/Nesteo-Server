@using Nesteo.Server.Data.Entities.Identity
@inject UserManager<UserEntity> UserManager
@{
    Layout = "../Shared/_Layout";
}

@{
    UserEntity user = await UserManager.GetUserAsync(User).ConfigureAwait(false);
}

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" asp-page="/Management/Index">Nesteo Server</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-nav" aria-controls="navbar-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar-nav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Management/Users">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Management/Data">Data</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="Profile/EditProfile">@user.FirstName @user.LastName</a>
                </li>
                <li class="nav-item">
                    <form class="form-inline" asp-page="/Auth/Logout" method="post">
                        <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container p-3 p-md-4">
    @RenderBody()
</div>
